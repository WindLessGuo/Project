<resources>

    <!-- Base application theme. Theme.AppCompat.Light.NoActionBar-->
    <style name="play_AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/play_light_blue</item>
        <item name="colorPrimaryDark">@color/play_light_blue</item>
        <item name="colorAccent">@color/play_colorAccent</item>
    </style>

    <style name="play_AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="play_AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="play_ToolbarPopupTheme" parent="@style/ThemeOverlay.AppCompat.Dark">
        <item name="android:colorBackground">@color/play_light_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="actionOverflowMenuStyle">@style/play_OverflowMenuStyle
        </item> <!--新增一个item，用于控制menu-->
    </style>


    <!--溢出[弹出]菜单样式 parent相当于继承【可以不要parent】-->
    <style name="play_OverflowMenuStyle" parent="@style/Widget.AppCompat.PopupMenu.Overflow">

        <!-- 是否覆盖锚点，默认为true，即盖住Toolbar -->
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:paddingRight">5dp</item>
        <!-- 弹出层背景颜色 -->
        <item name="android:popupBackground">@color/play_light_blue</item>
        <!-- 弹出层垂直方向上的偏移，即在竖直方向上距离Toolbar的距离，值为负则会盖住Toolbar -->
        <item name="android:dropDownVerticalOffset">5dp</item>
        <!-- 弹出层水平方向上的偏移，即距离屏幕左边的距离，负值会导致右边出现空隙 -->
        <item name="android:dropDownHorizontalOffset">0dp</item>
        <!-- 设置弹出菜单文字颜色 -->
        <item name="android:textColor">@color/white</item>
    </style>


</resources>
