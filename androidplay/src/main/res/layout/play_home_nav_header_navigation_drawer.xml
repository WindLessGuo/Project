<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/play_nav_header_height"
    android:background="@color/play_light_blue"
    android:gravity="bottom"
    android:orientation="vertical"
    android:id="@+id/play_drawer_header"
    android:paddingBottom="@dimen/play_home_vertical_margin"
    android:paddingLeft="@dimen/play_home_horizontal_margin"
    android:paddingRight="@dimen/play_home_horizontal_margin"
    android:paddingTop="@dimen/play_home_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/drawer_header_img"
        android:layout_width="@dimen/play_dp_50"
        android:layout_height="@dimen/play_dp_50"
        android:layout_marginLeft="@dimen/play_dp_15"
        android:contentDescription="@string/play_nav_header_desc"
        android:scaleType="fitXY"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/drawer_header_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/play_nav_header_vertical_spacing"
        android:text="请先登录"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/white"
        android:textSize="@dimen/play_list_text_title" />

    <TextView
        android:id="@+id/drawer_header_describe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/play_list_text_second_title"
        tools:text="@string/play_nav_header_subtitle" />

</LinearLayout>
